extend includes/_layout
block title
	title 10
block body
	body.s10
		.wrapper
			.wrapper__in.text-left
				.s10__nav-wrap
					.s10__nav.js-nav
						.s10__nav-link.is-active
							.s10__nav-link-text Пример 1
						.s10__nav-link
							.s10__nav-link-text Пример 2
						.s10__nav-link
							.s10__nav-link-text Пример 3

				.row
					.s10__col
						img.s10__title(src='img/10/title.png')

				.s10__tab.is-active.js-tab(data-index='1')
					.row
						.s10__col
							img.s10__img(src='img/10/1.png')
						.s10__col.s10__col_1.rel
							img.s10__img.s10__img_1.js-10-img-1(src='img/10/1-0.png')
							img.s10__shadow-1.js-10-shadow-1(src='img/10/shadow.png')
							.s10__box.s10__box_1
								img.s10__img-1(src='img/10/1-1.png')
							.s10__box.s10__box_2
								img.s10__img-2(src='img/10/1-2.png')
							.s10__box.s10__box_3
								img.s10__img-3(src='img/10/1-3.png')
							.s10__box.s10__box_4
								img.s10__img-4(src='img/10/1-4.png')
							.s10__box.s10__box_5
								img.s10__img-5(src='img/10/1-5.png')
							.s10__btn.s10__btn_1.plus-btn.js-plus-btn.js-10-btn-1
								.plus-btn__text.plus-btn__text_plus

				.s10__tab.js-tab(data-index='2')
					.s10__col
						img.s10__img.s10__img_margin(src='img/10/2.png')
					.s10__col.s10__col_1.rel.text-center
						img.s10__img.s10__img_1.js-10-img-1(src='img/10/2-0.png')
						img.s10__img-tab-2-1.js-10-img-2(src='img/10/2-1.png')
						img.s10__img-tab-2-2.js-10-img-3(src='img/10/2-2.png')
						.s10__btn.s10__btn_2.plus-btn.js-plus-btn.js-10-btn-2
							.plus-btn__text.plus-btn__text_plus

				.s10__tab.js-tab(data-index='3')
					img.s10__img.s10__img_margin(src='img/10/3.png')
	block js
		script(src="app.js")