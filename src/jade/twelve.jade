extend includes/_layout
block counterValue
	-var counterValue = '10'
block tooltip
block title
	title 12
block body
	body.s12#s12(data-next-slide='thirteen.html' data-prev-slide='eleven.html')
		include includes/_tutorial
		include includes/_header
		#swiper.s12__swiper
		.wrapper
			.s12__in.wrapper__in
				img.s12__title(src='img/12/title.png' srcset='img/12/title@2x.png 2x')
				ul.s12__slider.js-12-slider
					li.s12__item.main-pos#1
						img.s12__img(src='img/12/img-1.png' srcset='img/12/img-1@2x.png 2x')
					li.s12__item.right-pos#2
						img.s12__img(src='img/12/img-2.png' srcset='img/12/img-2@2x.png 2x')
					li.s12__item.back-pos#3
						img.s12__img(src='img/12/img-3.png' srcset='img/12/img-3@2x.png 2x')
					li.s12__item.back-pos#4
						img.s12__img(src='img/12/img-4.png' srcset='img/12/img-4@2x.png 2x')
					li.s12__item.back-pos#5
						img.s12__img(src='img/12/img-5.png' srcset='img/12/img-5@2x.png 2x')
					li.s12__item.left-pos#6
						img.s12__img(src='img/12/img-6.png' srcset='img/12/img-6@2x.png 2x')
				span.s12__controls.js-12-controls
					.s12__prev(id="prev")
						+i('left-arrow')
					.s12__next(id="next")
						+i('right-arrow')
				.s12__desc.js-12-desc
					img.s12__desc-text.is-active(src='img/12/text1.png' srcset='img/12/text1@2x.png 2x')
					img.s12__desc-text(src='img/12/text2.png' srcset='img/12/text2@2x.png 2x')
					img.s12__desc-text(src='img/12/text3.png' srcset='img/12/text3@2x.png 2x')
					img.s12__desc-text(src='img/12/text4.png' srcset='img/12/text4@2x.png 2x')
					img.s12__desc-text(src='img/12/text5.png' srcset='img/12/text5@2x.png 2x')
					img.s12__desc-text(src='img/12/text6.png' srcset='img/12/text6@2x.png 2x')
				.s12__nav.js-12-nav
					.s12__nav-item.is-active
					.s12__nav-item
					.s12__nav-item
					.s12__nav-item
					.s12__nav-item
					.s12__nav-item
		include includes/_footer
	block js
		script(src="app.js")